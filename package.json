{
  "name": "tswc",
  "version": "1.5.0",
  "description": "Compile your TypeScript with tsconfig.json using swc",
  "bin": "dist/cli.js",
  "scripts": {
    "typeCheck": "npx tsc --noEmit",
    "build": "npm run typeCheck && npm run tswc -- src -d dist --strip-leading-paths",
    "pretest": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "prepare": "npx lint-staged",
    "tswc": "ts-node src/cli.ts --"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Songkeys/tswc.git"
  },
  "keywords": [
    "swc",
    "tsconfig",
    "compiler",
    "typescript"
  ],
  "author": "Songkeys",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Songkeys/tswc/issues"
  },
  "homepage": "https://github.com/Songkeys/tswc#readme",
  "dependencies": {
    "cac": "^6.7.14",
    "jsonc-parser": "^3.3.1",
    "tsconfig-to-swcconfig": "^2.8.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.9.3",
    "@types/node": "^22.10.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "@swc/cli": "^0.5.2",
    "@swc/core": ">= 1.3.38"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
